<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.HomePage"
             Title="Home Page">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary"
                     Text="login"
                     Priority="0"
                     Command="{Binding}"/>
        <ToolbarItem Order="Secondary"
                     Text="my questions"
                     Priority="1"
                     Command="{Binding}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>

        <StackLayout BackgroundColor="BurlyWood">

            <Label Text="{Binding User1}"/>
            <Button Text="Start Game" Command="{Binding StartGame}"/>
            <Button Text="Login" Command="{Binding LoginPageGame}"/>
            <Button Text="Register" Command="{Binding RegisterPageGame}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>